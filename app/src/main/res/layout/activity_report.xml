<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".Report">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/form_background"
            android:elevation="4dp">

            <!-- Кнопка "Назад" и заголовок "Отчет" на одной строке -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageButton
                    android:id="@+id/buttonBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Отчет по вентиляция"
                    android:textSize="24sp"
                    android:textColor="#6200EE"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Имя объекта -->
            <EditText
                android:id="@+id/editObjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Имя объекта"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Подпись для выбора существующего объекта -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Можете выбрать существующий объект"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Выбор существующего объекта -->
            <Spinner
                android:id="@+id/spinnerExistingObjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"/>

            <!-- Поле для ввода квартиры -->
            <EditText
                android:id="@+id/editApartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите квартиру"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Подпись для выбора квартиры -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Можете выбрать существующую квартиру"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Выбор квартиры -->
            <Spinner
                android:id="@+id/spinnerExistingApartments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"/>

            <!-- Поле для ввода названия комнаты -->
            <EditText
                android:id="@+id/editRoomName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Название комнаты"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"/>

            <!-- Подпись для выбора действия -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выберите действие"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Выбор действия -->
            <Spinner
                android:id="@+id/spinnerActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"/>

            <!-- Поле для ввода количества -->
            <EditText
                android:id="@+id/editQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Количество"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"/>

            <!-- Поле для ввода комментария -->
            <EditText
                android:id="@+id/editComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Комментарий"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="5"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"/>

            <!-- Кнопка загрузки фото -->
            <Button
                android:id="@+id/buttonUploadPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Загрузить фото"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Кнопка сохранения отчета -->
            <Button
                android:id="@+id/buttonSaveReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сохранить отчет"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
