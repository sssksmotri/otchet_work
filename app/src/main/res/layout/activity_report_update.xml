<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".ReportUpdate">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/form_background"
            android:elevation="4dp"
            android:clipToPadding="false">


            <!-- Кнопка "Назад" и заголовок "Отчет" на одной строке -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageButton
                    android:id="@+id/buttonBack_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Отчет по вентиляция"
                    android:textSize="24sp"
                    android:textColor="#6200EE"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"/>


            <!-- Имя объекта -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Введите имя объекта:"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editObjectName_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите имя объекта"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Ввод квартиры -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Введите квартиру:"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editApartment_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите квартиру"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Название комнаты -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Введите название комнаты:"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editRoomName_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите название комнаты"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"/>

            <!-- Подпись для выбора действия -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выберите действие:"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Выбор действия -->
            <Spinner
                android:id="@+id/spinnerActions_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"/>

            <!-- Поле для ввода количества -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Введите количество:"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editQuantity_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите количество"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"/>

            <!-- Поле для ввода комментария -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Введите комментарий:"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/editComments_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите комментарий"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="5"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"/>

            <!-- Кнопка загрузки фото -->
            <Button
                android:id="@+id/buttonUploadPhoto_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Загрузить фото"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="24dp"/>

            <!-- Кнопки удаления и сохранения отчета -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <!-- Кнопка удаления отчета -->
                <Button
                    android:id="@+id/buttonDeleteReport_up"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Удалить отчет"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_delete"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>

                <!-- Кнопка сохранения отчета -->
                <Button
                    android:id="@+id/buttonSaveReport_up"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Сохранить изменения"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>